<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_8sdp">

    <CheckBox
        android:id="@+id/check_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/custom_checkbox"
        android:checked="false"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_checkbox_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/check_all"
        app:layout_constraintEnd_toEndOf="@id/check_all"
        app:layout_constraintStart_toStartOf="@id/check_all"
        app:layout_constraintTop_toTopOf="@id/check_all" />

    <TextView
        android:id="@+id/tv_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14sdp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@id/check_all"
        app:layout_constraintStart_toEndOf="@id/check_all"
        app:layout_constraintTop_toTopOf="@id/check_all" />


            <TextView
                android:id="@+id/tv_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/select_all"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@+id/check_all"
                app:layout_constraintBottom_toBottomOf="@+id/check_all"
                android:textSize="@dimen/_15sdp" />
</androidx.constraintlayout.widget.ConstraintLayout>
