<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_bottom_bar_1"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_50sdp"
        >

        <ImageView
            android:id="@+id/img_recovery_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_recovery_selected"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/img_recovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_recovery"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tv_recovery"
            app:layout_constraintBottom_toTopOf="@+id/tv_recovery"
            app:layout_constraintEnd_toEndOf="@+id/tv_recovery"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_recovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recovery"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#1B1D21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            />

        <View
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_recovery"
            app:layout_constraintEnd_toEndOf="@id/tv_recovery"
            app:layout_constraintStart_toStartOf="@id/tv_recovery"
            app:layout_constraintTop_toTopOf="@id/img_recovery" />

        <ImageView
            android:id="@+id/img_recycle_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_recycle_selected"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/img_recycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_recycle"
            app:layout_constraintStart_toStartOf="@+id/tv_recycle"
            app:layout_constraintBottom_toTopOf="@+id/tv_recycle"
            app:layout_constraintEnd_toEndOf="@+id/tv_recycle"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_recycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recycle"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#1B1D21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/btn_recycle_bin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_recycle"
            app:layout_constraintEnd_toEndOf="@id/tv_recycle"
            app:layout_constraintStart_toStartOf="@id/tv_recycle"
            app:layout_constraintTop_toTopOf="@id/img_recycle" />

        <ImageView
            android:id="@+id/img_history_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_history_selected"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/img_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_history_menu"
            app:layout_constraintStart_toStartOf="@+id/tv_history"
            app:layout_constraintBottom_toTopOf="@+id/tv_history"
            app:layout_constraintEnd_toEndOf="@+id/tv_history"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_button"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#1B1D21"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:id="@+id/btn_history"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_history"
            app:layout_constraintEnd_toEndOf="@id/tv_history"
            app:layout_constraintStart_toStartOf="@id/tv_history"
            app:layout_constraintTop_toTopOf="@id/img_history" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>